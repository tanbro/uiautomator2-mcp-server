# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
[*.pyi]
indent_style = space
indent_size = 4
[*.pyx]
indent_style = space
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2
[*.yml]
indent_style = space
indent_size = 2
